@{
    ViewData["Title"] = "Home Page";
}

<div class="col-lg-7">
    <div class="form-wrapper">
        <div class="form-header">
            <h3>Send us a message</h3>
        </div>

        <form asp-action="SendMessage" method="post" class="php-email-form" id="contactForm">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Full Name</label>
                        <input id="name" type="text" name="name" required="">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email Address</label>
                        <input id="email" type="email" name="email" required="">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label>Subject</label>
                <input id="subject" type="text" name="subject" required="">
            </div>

            <div class="form-group">
                <label for="projectMessage">Message</label>
                <textarea name="message" id="projectMessage" rows="5" required=""></textarea>
            </div>

            <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your message has been sent. Thank you!</div>
            </div>

            <button type="submit" class="submit-btn">
                <span>Send Message</span>
                <i class="bi bi-arrow-right"></i>
            </button>

        </form>

    </div>

</div>
@section Scripts{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#contactForm").submit(function(event){
                event.preventDefault();
                var formData={
                    name: $("#name").val();
                    email: $("#email").val();
                    subject: $("#subject").val();
                    message: $("textarea[name=message]").val()};

                    $.ajax({
                        type:"POST",
                        url:"@Url.Action("SendMessage","Home")",
                        data:formData,
                        success:function(response){
                            if(response.success)
                            {
                                $(".sent-message").text(response.responseText).show();
                                $(".error-message").hide();
                                $("#contactForm")[0].reset();
                            }
                            else{
                            $(".error-message").text("There was error.Please try again").show();
                            $(".sent-message").hide();
                            }
                            },
                            error:function(){
                        $(".error-message").text("There was error.Please try again").show();
                        $(".sent-message").hide();
                            }
                        });
                    });
                });
    </script>
}